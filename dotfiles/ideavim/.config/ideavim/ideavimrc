set idearefactormode=keep
set ideajoin
set clipboard+=ideaput  "Add ideaput to clipboard option to perform a put via the IDE
set incsearch

nnoremap ,a :action GotoAction<CR>
nnoremap ,x :action SearchEverywhere<CR>
nnoremap ,f :action GotoFile<CR>
nnoremap ,s :action GotoSymbol<CR>
nnoremap ,t :action GotoClass<CR>
" go to buffer symbol
nnoremap ,bs :action FileStructurePopup<CR>
" inoremap ,s <esc>:action GotoSymbol<CR>
nnoremap gl :action GotoNextError<CR>
nnoremap gL :action GotoPreviousError<CR>
nnoremap =b :action ReformatCode<CR>
nnoremap cr :action RenameElement<CR>
nnoremap gsd :action GotoDeclaration<CR>
nnoremap gst :action GotoTypeDeclaration<CR>
nnoremap gsi :action GotoImplementation<CR>
" inoremap ,cr <ESC>:action RenameElement<CR>

Plug 'tpope/vim-commentary'
Plug 'tpope/vim-surround'
