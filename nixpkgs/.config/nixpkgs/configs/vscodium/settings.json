{
    "update.mode": "none",
    "workbench.colorTheme": "Quiet Light",
    "files.autoSave": "afterDelay",

    "editor.tabSize": 4,
    "editor.fontSize": 18,
    "editor.fontFamily": "'Input Mono Condensed', 'Iosevka Medium Extended', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.lineHeight": 28,
    "editor.minimap.enabled": false,
    "editor.rulers": [80, 120],
    "editor.mouseWheelZoom": true,
    "editor.cursorBlinking": "smooth",
    "editor.cursorWidth": 3,
    
    "extensions.ignoreRecommendations": true,
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "workbench.enableExperiments": false,
    "workbench.settings.enableNaturalLanguageSearch": false,
    
    "breadcrumbs.enabled": true,
    // "window.zoomLevel": 1,

    "workbench.colorCustomizations": {
        "terminal.foreground": "#eff0f1",
        "terminal.background": "#2b2b2b"
    },
    "workbench.activityBar.visible": true,
    "workbench.editor.showTabs": false,

    "terminal.integrated.fontSize": 18,
    "terminal.external.linuxExec": "/usr/bin/gnome-terminal",
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.confirmOnExit": true,
    "terminal.integrated.drawBoldTextInBrightColors": false,
    "terminal.integrated.fontWeightBold": "normal",
    // "terminal.integrated.letterSpacing": 1,
    "terminal.integrated.scrollback": 100000,
    "terminal.integrated.lineHeight": 1.2,
    "terminal.explorerKind": "external",

    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },

    "[nix]": {
        "editor.tabSize": 2
    },

    "files.trimFinalNewlines": true,
    "files.insertFinalNewline": true,

    "explorer.confirmDragAndDrop": false,

    "vim.statusBarColorControl": false,
    "vim.leader": ",",
    "vim.useCtrlKeys": true,
    "vim.incsearch": true,
    "vim.showcmd": true,
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "Z",
                "Z"
            ],
            "commands": [
                ":wq"
            ]
        },
        {
            "before": [
                "Z",
                "Q"
            ],
            "commands": [
                ":q!"
            ]
        },
        {
            "before": [
                "leader",
                "w"
            ],
            "commands": [
                ":w"
            ]
        },
        {
            "before": [
                "leader",
                "q"
            ],
            "commands": [
                ":q"
            ]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                ">"
            ],
            "commands": [
                "editor.action.indentLines"
            ]
        },
        {
            "before": [
                "<"
            ],
            "commands": [
                "editor.action.outdentLines"
            ]
        }
    ],

    "sync.askGistName": true,
    "sync.autoDownload": true,
    "sync.autoUpload": true,
    "sync.gist": "91487f84859a95e3d05bf842e3d9697e",
    "sync.quietSync": true,
    "sync.forceUpload": true
}
